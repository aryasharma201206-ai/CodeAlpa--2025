#include <stdio.h>


void add(int a[5][5], int b[5][5], int r, int c);
void mul(int a[5][5], int b[5][5], int r1, int c1, int c2);
void transpose(int a[5][5], int r, int c);

int main() {
    int a[5][5], b[5][5];
    int r, c;

    printf("Enter rows and columns: ");
    scanf("%d %d", &r, &c);

    printf("Enter Matrix A:\n");
    for(int i=0;i<r;i++)
        for(int j=0;j<c;j++)
            scanf("%d",&a[i][j]);

    printf("Enter Matrix B:\n");
    for(int i=0;i<r;i++)
        for(int j=0;j<c;j++)
            scanf("%d",&b[i][j]);

    printf("Matrix Addition:\n");
    add(a,b,r,c);

    printf("Matrix Multiplication:\n");
    mul(a,b,r,c,c);

    printf("Transpose of Matrix A:\n");
    transpose(a,r,c);

    return 0;
}


void add(int a[5][5], int b[5][5], int r, int c) {
    for(int i=0;i<r;i++) {
        for(int j=0;j<c;j++)
            printf("%d ", a[i][j] + b[i][j]);
        printf("\n");
    }
}


void mul(int a[5][5], int b[5][5], int r1, int c1, int c2) {
    int sum;
    for(int i=0;i<r1;i++) {
        for(int j=0;j<c2;j++) {
            sum = 0;
            for(int k=0;k<c1;k++)
                sum += a[i][k] * b[k][j];
            printf("%d ", sum);
        }
        printf("\n");
    }
}


void transpose(int a[5][5], int r, int c) {
    for(int i=0;i<c;i++) {
        for(int j=0;j<r;j++)
            printf("%d ", a[j][i]);
        printf("\n");
    }
}
